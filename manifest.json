{
  "manifest_version": 2,
  "name": "web-ext example",
  "version": "1.0",
  "description": "Adds a solid red border to all webpages.",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "content/borderify.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "applications": {
    "gecko": {
      "id": "web-ext@example.com"
    }
  }
}
